<?xml version="1.0" encoding="ISO-8859-1" ?>
<interface id="networking_barebone" version="1.2.8">
    <workflow-id>NETWORKING_BAREBONES</workflow-id>
    <workflow-label>NETWORKING_BAREBONES</workflow-label>

    <!-- Parameter declarations -->
    <parameters>
        <!-- Universal parameters -->
        <parameter name="desc" label="Description">
            <validator type="length" maximum="1000"/>
        </parameter>
        <parameter name="email" label="Email">
            <validator type="email"/>
        </parameter>

        <!-- Search file parameters -->
        <parameter name="spec_on_server" label="Spectrum Files">
            <validator type="required"/>
            <fileGenerator type="upload" purpose="spectrum" target="spectra"/>
        </parameter>

        <parameter name="min_matched_peaks" label="min_matched_peaks">
            <default value="6"/>
            <validator type="integer" minimumExclusive="0" maximum="1000"/>
        </parameter>

        <parameter name="ms2_tolerance" label="ms2_tolerance">
            <default value="0.5"/>
        </parameter>

        <parameter name="pm_tolerance" label="pm_tolerance">
            <default value="0.5"/>
        </parameter>

        <parameter name="min_cosine" label="min_cosine">
            <default value="0.7"/>
        </parameter>

        <parameter name="max_shift" label="max_shift">
            <default value="500"/>
        </parameter>

        <parameter name="networktype" label="networktype">
            <options>
                <option value="simile" label="simile"/>
                <option value="blink" label="blink"/>
                <option value="gnps" label="gnpscosine"/>
            </options>
            <validator type="set"/>
        </parameter>

    </parameters>

    <block label="File Selection">
        <row>
            <cell>
                <label>
                    <content parameter="spec_on_server"/>
                    <tooltip id="hSpectrumFile"/>
                </label>
            </cell>
            <cell>
                <module id="spec_on_server" type="fileSelector">
                    <property name="label">Spectrum Files</property>
                </module>
            </cell>
        </row>

        <row>
            <cell>
                <label>
                    <content parameter="networktype"/>
                </label>
            </cell>

            <cell>
                <input type="select" parameter="networktype"></input>
            </cell>

        </row>

        <row>
            <cell>
                <label>
                    <content parameter="min_matched_peaks"/>
                </label>
            </cell>
            <cell>
                <input type="text" parameter="min_matched_peaks">
                    <attribute name="size" value="3"/>
                </input>
            </cell>
        </row>

        <row>
            <cell>
                <label>
                    <content parameter="ms2_tolerance"/>
                </label>
            </cell>
            <cell>
                <input type="text" parameter="ms2_tolerance">
                    <attribute name="size" value="3"/>
                </input>
            </cell>
        </row>

        <row>
            <cell>
                <label>
                    <content parameter="pm_tolerance"/>
                </label>
            </cell>
            <cell>
                <input type="text" parameter="pm_tolerance">
                    <attribute name="size" value="3"/>
                </input>
            </cell>
        </row>

        <row>
            <cell>
                <label>
                    <content parameter="min_cosine"/>
                </label>
            </cell>
            <cell>
                <input type="text" parameter="min_cosine">
                    <attribute name="size" value="3"/>
                </input>
            </cell>
        </row>

        <row>
            <cell>
                <label>
                    <content parameter="max_shift"/>
                </label>
            </cell>
            <cell>
                <input type="text" parameter="max_shift">
                    <attribute name="size" value="3"/>
                </input>
            </cell>
        </row>
    </block>
</interface>
